{
    "name" : "XDebugProfiler",
    "version" : "1.0.0.0",
    "author" : "Michal Å koula",
    "browser_action" : 
    {
        "default_icon" : 
        {
            "20" : "icons/icon_20.png",
            "40" : "icons/icon_40.png"
        },
        "default_title" : "Enable / Disable XDebug Profiler",
        "default_popup" : "index.html"
    },
    "content_scripts" : [{
            "js" : ["js/functions.js"],
            "matches" : ["*://*/*"]
        }
    ],

    "content_security_policy" : "script-src 'self'; object-src 'self'",
    "default_locale" : "en",
    "description" : "Simply adds XDEBUG_PROFILE to URL so you can trigger XDebug Profile",

    "permissions" : 
    [
        "*://*/*", "tabs", "contextMenus"
    ],
    "icons" : {
        "128" : "icons/icon_128.png",
        "16" : "icons/icon_16.png",
        "48" : "icons/icon_48.png"
    },
    "minimum_edge_version" : "33.14281.1000.0",

    "web_accessible_resources" : ["icons/icon_48.png"]
} 